# SmartCart Platform Environment Variables

# Database Configuration
POSTGRES_URL=postgresql://smartcart:smartcart_dev_password@localhost:5432/smartcart
MONGODB_URL=mongodb://smartcart:smartcart_dev_password@localhost:27017/smartcart?authSource=admin
REDIS_URL=redis://localhost:6379

# Service URLs
CATALOG_SERVICE_URL=http://localhost:3001
USER_SERVICE_URL=http://localhost:3002
ORDER_SERVICE_URL=http://localhost:3003
PAYMENT_SERVICE_URL=http://localhost:3004
NOTIFICATION_SERVICE_URL=http://localhost:3005

# Frontend Configuration
NEXT_PUBLIC_CATALOG_SERVICE_URL=http://localhost:3001
NEXT_PUBLIC_USER_SERVICE_URL=http://localhost:3002
NEXT_PUBLIC_ORDER_SERVICE_URL=http://localhost:3003
NEXT_PUBLIC_WEBSOCKET_URL=http://localhost:3005

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# Store API Keys (Replace with actual keys from store partnerships)
KROGER_API_KEY=your_kroger_api_key
KROGER_API_URL=https://api.kroger.com/v1

SAFEWAY_API_KEY=your_safeway_api_key
SAFEWAY_API_URL=https://api.safeway.com/v1

WALMART_API_KEY=your_walmart_api_key
WALMART_API_URL=https://api.walmart.com/v1

TARGET_API_KEY=your_target_api_key
TARGET_API_URL=https://api.target.com/v1

# Payment Gateway (Stripe)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Service (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@smartcart.com

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# AWS S3 (for image uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=smartcart-uploads

# Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Environment
NODE_ENV=development
LOG_LEVEL=info
